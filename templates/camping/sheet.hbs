<form class="camping-sheet">
    <div class="camping-header">
        <div class="region-controls">
            <div class="region-player-controls">
                <div><span class="label">Time:</span> {{time}}</div>
                <div><span class="label">Adventuring:</span> {{adventuringSince}}</div>
            </div>
            <div {{#if isUser}}hidden{{/if}} class="region-gm-controls">
                <div>
                    <label for="region-input">Region:</label>
                    <select name="currentRegion" id="region-input" {{#if isUser}}disabled{{/if}}>
                        {{#select currentRegion}}
                            {{#each regions}}
                                <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        {{/select}}
                    </select>
                </div>
                <div>
                <div><span class="label">Modifier:</span> {{currentEncounterDCModifier}}</div>
                    <button type="button" class="decrease-zone-dc-modifier" title="Decrease Modifier"><i class="fa-solid fa-minus"></i></button>
                    <button type="button" class="increase-zone-dc-modifier" title="Increase Modifier"><i class="fa-solid fa-plus"></i></button>
                    <button type="button" class="reset-zone-dc-modifier" title="Reset Modifier"><i class="fa-solid fa-rotate-left"></i></button>
                </div>
                <div>
                    <button type="button" class="post-combat-effects" title="Post Companion Combat Effects to Chat"><i class="fa-solid fa-swords"></i></button>
                    <div><span class="label">DC:</span> {{encounterDC}}</div>
                    <button type="button" class="roll-encounter" title="Roll Random Encounter" data-phase="activities"><i class="fa-solid fa-skull"></i></button>
                    <button type="button" class="check-encounter" title="Check Random Encounter" data-phase="activities"><i class="fa-solid fa-dice-d20"></i><i class="fa-solid fa-skull"></i></button>
                </div>
            </div>
        </div>
        <div class="time">
            <div style="left: {{timeMarkerPositionPx}}px"  class="time-marker"></div>
        </div>
        <div class="region-controls">
            <div class="region-player-controls">
                <div>
                    <div><span class="label">Watch Duration:</span> {{watchDuration}}</div>
                </div>
                <div>
                    <div><span class="label">Daily Preps Duration:</span> {{dailyPrepsDuration}}</div>
                </div>
            </div>
            <div {{#if isUser}}hidden{{/if}} class="region-gm-controls">
                <div>
                    <button type="button" class="end-rest">Begin Rest <i class="fa-solid fa-bed"></i></button>
                    <button type="button" class="camping-settings"><i class="fa-solid fa-cog"></i></button>
                </div>
            </div>
        </div>
    </div>

    <!-- sidebar -->
    <div class="camping-sidebar">
        <h2>In Camp</h2>
        <ul class="camping-actors">
            {{#each actors}}
                <li class="camping-actor" data-uuid="{{uuid}}">
                    <div class="chosen-camping-activity {{#if activityResult}}{{activityResult}}{{/if}}" {{#if noActivityChosen}}hidden{{/if}}>{{activity}}</div>
                    <div class="actor-image-container">
                        <img src="{{image}}" class="actor-image" title="{{name}}" data-uuid="{{uuid}}">
                        <button type="button" class="remove-actor" data-uuid="{{uuid}}" data-type="camping-actors"><i
                                class="fa-solid fa-xmark"></i>
                        </button>
                    </div>
                </li>
            {{/each}}
            <li class="new-camping-actor">
                <img src="modules/pf2e-kingmaker-tools/static/img/add-actor.webp" title="Drop Actor Here"
                     class="no-actor-image">
            </li>
        </ul>
    </div>

    <!-- content -->
    <div class="camping-content">
        <header class="camping-section-header">
            <h2>Camping Activities</h2>
            <div {{#if isUser}}hidden{{/if}} class="camping-gm-buttons">
                <button type="button" class="unlock-activities" data-hours="1">Unlock <i class="fa-solid fa-lock-open"></i></button>
                <button type="button" class="clear-activities" data-hours="1">Clear <i class="fa-solid fa-trash"></i></button>
                <button type="button" class="advance-hours" data-hours="1">+1h <i class="fa-solid fa-clock"></i></button>
                <button type="button" class="advance-hours" data-hours="2">+2h <i class="fa-solid fa-clock"></i></button>
            </div>
        </header>

        <ul class="camping-actors">
            {{#each campingActivities}}
                <li class="camping-activity" data-name="{{name}}">
                    {{> modules/pf2e-kingmaker-tools/templates/camping/activity.partial.hbs actor=actor activity=name journalUuid=journalUuid degreesOfSuccesses=../degreesOfSuccesses degreeOfSuccess=degreeOfSuccess slug=slug}}
                </li>
            {{/each}}
        </ul>

        <header class="camping-section-header">
            <h2>Eating</h2>
            <div class="camping-user-buttons">
                <button type="button" class="manage-recipes">Manage Recipes <i class="fa-solid fa-book-open"></i></button>
            </div>
            <div {{#if isUser}}hidden{{/if}} class="camping-gm-buttons">
                <button type="button" class="add-recipes">Add Recipes <i class="fa-solid fa-plus"></i></button>
            </div>
        </header>

        <ul class="camping-actors">
            {{#each actorMeals}}
            <li class="eating-actors">
                {{> modules/pf2e-kingmaker-tools/templates/camping/eating.partial.hbs actor=this knownRecipes=../knownFavoriteRecipes}}
            </li>
            {{/each}}
        </ul>

        <div>
            <table class="km-table cost-table">
                <tr>
                    <th>Consumables</th>
                    <th>Rations</th>
                    <th>Subsistence</th>
                    <th>Magical Subsistence</th>
                    <th>Basic Ingredients</th>
                    <th>Special Ingredients</th>
                    <th>Pay</th>
                </tr>
                <tr>
                    <td>Available</td>
                    <td>{{rations}}</td>
                    <td><input type="number" name="subsistenceAmount" value="{{subsistenceAmount}}"></td>
                    <td><input type="number" name="magicalSubsistenceAmount" value="{{magicalSubsistenceAmount}}"></td>
                    <td>{{basicIngredients}}</td>
                    <td>{{specialIngredients}}</td>
                    <td></td>
                </tr>
                <tr>
                    <td>Consumed</td>
                    <td {{#if consumedFood.rations.warning}}class="consume-warning"{{/if}}>{{consumedFood.rations.value}}</td>
                    <td>{{consumedFood.subsistence}}</td>
                    <td>{{consumedFood.magicalSubsistence}}</td>
                    <td {{#if consumedFood.basicIngredients.warning}}class="consume-warning"{{/if}}>{{consumedFood.basicIngredients.value}}</td>
                    <td {{#if consumedFood.specialIngredients.warning}}class="consume-warning"{{/if}}>{{consumedFood.specialIngredients.value}}</td>
                    <td><button type="button" class="consume-food" title="Remove from Actor's inventories" {{#if isUser}}disabled{{/if}}><i class="fa-solid fa-minus"></i></button></td>
                </tr>
            </table>
            <div class="camping-cook">
                <div>
                    <label>Recipe
                        <select name="chosenMeal">
                            {{#select chosenMeal}}
                                {{#each knownRecipes}}
                                    <option value="{{this}}">{{this}}</option>
                                {{/each}}
                            {{/select}}
                        </select>
                    </label>
                    <button type="button" class="recipe-info" title="Recipe Info"><i class="fa-solid fa-question"></i></button>
                </div>
                <div>
                    <label>Skill
                    <select name="cookingSkill">
                        {{#select cookingSkill}}
                            {{#each cookingSkills}}
                                <option value="{{value}}">{{label}}</option>
                            {{/each}}
                        {{/select}}
                    </select>
                    </label>
                    <span><span class="label">DC</span> {{chosenMealDc}}</span>
                    <button type="button" class="cook-food" {{#unless hasCookingActor}}disabled{{/unless}}><i class="fa-solid fa-dice-d20"></i></button>
                </div>
                <div>
                    <label>Degree of Success
                        <select name="mealDegreeOfSuccess">
                            {{#select mealDegreeOfSuccess}}
                                <option>-</option>
                                {{#each degreesOfSuccesses}}
                                    <option value="{{value}}">{{label}}</option>
                                {{/each}}
                            {{/select}}
                        </select>
                    </label>
                </div>
            </div>
        </div>
    </div>
</form>
