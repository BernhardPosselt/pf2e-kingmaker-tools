<table class="km-table">
    <tr>
        <th>Active Settlement</th>
        <td>
            <select name="activeSettlement">
                {{#select activeSettlement}}
                    {{#each settlements}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                {{/select}}
            </select>
        </td>
    </tr>
    <tr>
        <th>Control DC</th>
        <td>{{controlDC}}</td>
    </tr>
    <tr>
        <th>At War</th>
        <td><input type="checkbox" name="atWar" {{checked atWar}}></td>
    </tr>
    <tr>
        <th>Unrest</th>
        <td><input type="number" value="{{unrest}}" name="unrest"></td>
    </tr>
</table>
<table class="km-table">
    <tr>
        <th>Ruin</th>
        <th>Value</th>
        <th>Penalty</th>
        <th>Threshold</th>
    </tr>
    {{#each ruin}}
        <tr>
            <td>{{this.label}}</td>
            <td><input type="number" value="{{this.value}}" name="ruin.{{@key}}.value"></td>
            <td><input type="number" value="{{this.penalty}}" name="ruin.{{@key}}.penalty"></td>
            <td><input type="number" value="{{this.threshold}}" name="ruin.{{@key}}.threshold"></td>
        </tr>
    {{/each}}
</table>
<table class="km-table">
    <tr>
        <th>Die Size</th>
        <th>Dice</th>
        <th title="This will be moved to Turn and reset to 0">Next</th>
    </tr>
    <tr>
        <td>{{resourceDieSize}}</td>
        <td>{{resourceDice}}</td>
        <td><input type="number" value="{{resourcesNextRound.bonusResourceDice}}" name="resourcesNextRound.bonusResourceDice"></td>
    </tr>
</table>
<table class="km-table">
    <tr>
        <th>Resource Points</th>
        <th title="This will be moved to Turn and reset to 0">Next</th>
    </tr>
    </tr>
    <tr>
        <td><input type="number" value="{{resources.resourcePoints}}" name="resources.resourcePoints"></td>
        <td><input type="number" value="{{resourcesNextRound.resourcePoints}}" name="resourcesNextRound.resourcePoints"></td>
    </tr>
</table>
<table class="km-table">
    <tr>
        <th>Consumption</th>
<!--        <th>Settlement</th>-->
        <th>Armies</th>
        <th title="This turn only, will be reset to 0">Turn</th>
        <th title="This will be moved to Turn and reset to 0">Next</th>
    </tr>
    <tr>
        <td>{{totalConsumption}}</td>
<!--        <td>{{settlementConsumption}}</td>-->
        <td><input type="number" value="{{consumption.armies}}" name="consumption.armies"></td>
        <td><input type="number" value="{{consumption.other}}" name="consumption.other"></td>
        <td><input type="number" value="{{consumption.next}}" name="consumption.next"></td>

    </tr>
</table>
<table class="km-table">
    <tr>
        <th>Commodity</th>
        <th>Quantity</th>
        <th>Capacity</th>
        <th title="This will be moved to Turn and reset to 0">Next</th>
    </tr>
    {{#each commodities}}
        <tr>
            <td>{{label}}</td>
            <td><input type="number" value="{{value}}" name="commodities.{{@key}}"></td>
            <td>{{capacity}}</td>
            <td><input type="number" value="{{next}}" name="commoditiesNextRound.{{@key}}"></td>
        </tr>
    {{/each}}
</table>
<table class="km-table">
    <tr>
        <th>Worksite</th>
        <th>Quantity</th>
        <th>Resources</th>
    </tr>
    {{#each workSites}}
        <tr>
            <td>{{label}}</td>
            <td><input type="number" value="{{quantity}}" name="workSites.{{@key}}.quantity"></td>
            <td><input type="number" value="{{resources}}" name=workSites.{{@key}}.resources></td>
        </tr>
    {{/each}}
</table>
