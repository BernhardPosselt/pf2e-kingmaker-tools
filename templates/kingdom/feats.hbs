<table class="km-table">
    <tr>
        <th>Level</th>
        <th>Feat</th>
        <th>Minimum Level</th>
        <th>Prerequisites</th>
        <th title="Comes With Automation">Auto</th>
    </tr>
    {{#each levelFeats}}
        <tr>
            <td>{{takenAt}}<input type="hidden" name="feats.{{@index}}.level" value="{{takenAt}}"></td>
            <td>
                <select name="feats.{{@index}}.id">
                    {{#select name}}
                        {{#each ../featIds}}
                            <option value="{{this}}">{{this}}</option>
                        {{/each}}
                    {{/select}}
                </select>
            </td>
            <td>{{level}}</td>
            <td>{{prerequisites}}</td>
            <td>
            {{#if automated}}
                <i class="fa-solid fa-circle-check"></i>
            {{else}}
                <i class="fa-solid fa-circle-xmark"></i>
            {{/if}}
            </td>
        </tr>
        {{#if text}}
            <tr>
                <td colspan="5">{{text}}</td>
            </tr>
        {{/if}}
    {{/each}}
</table>

<table class="km-table">
    <tr>
        <th>Bonus Feat</th>
        <th>Minimum Level</th>
        <th>Prerequisites</th>
        <th>Automated</th>
        <th>Remove/Add</th>
    </tr>
    {{#each bonusFeats}}
        <tr>
            <td>
                <select name="bonusFeats.{{@index}}.id">
                    {{#select name}}
                        {{#each ../featIds}}
                            <option value="{{this}}">{{this}}</option>
                        {{/each}}
                    {{/select}}
                </select>
            </td>
            <td>{{level}}</td>
            <td>{{prerequisites}}</td>
            <td>
                {{#if automated}}
                    <i class="fa-solid fa-circle-check"></i>
                {{else}}
                    <i class="fa-solid fa-circle-xmark"></i>
                {{/if}}
            </td>
            <td>
                <button class="icon-action"><i class="fa-solid fa-trash"></i></button>
            </td>
        </tr>
        {{#if text}}
            <tr>
                <td colspan="5">{{text}}</td>
            </tr>
        {{/if}}
    {{/each}}
</table>
<button>Add Bonus Feat <i class="fa-solid fa-plus"></i></button>
