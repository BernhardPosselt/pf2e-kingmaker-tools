<table class="km-table">
    <tr>
        <th>Skill</th>
        <th>Ability</th>
        <th>Proficiency</th>
        <th title="Ability Bonus">A</th>
        <th title="Proficiency Bonus">P</th>
        <th title="Status Bonus">S</th>
        <th title="Circumstance Bonus">C</th>
        <th title="Item Bonus">I</th>
        <th title="Unrest Penalty">U</th>
        <th title="Circumstance Penalty">C</th>
        <th title="Ruin Penalty">R</th>
        <th title="Vacancy Penalty">V</th>
        <th>Value</th>
    </tr>
    {{#each skills}}
        <tr>
            <td>{{skillLabel}}</td>
            <td>{{abilityLabel}}</td>
            <td>
                <select name="skillRanks.{{skill}}" data-dtype="Number">
                    {{#select rank}}
                        {{#each ../ranks}}
                            <option value="{{value}}">{{label}}</option>
                        {{/each}}
                    {{/select}}
                </select>
            </td>
            <td class="skill-bonus" title="Ability Bonus">{{abilityBonus}}</td>
            <td class="skill-bonus" title="Proficiency Bonus">{{proficiencyBonus}}</td>
            <td class="skill-bonus" title="Status Bonus">{{statusBonus}}</td>
            <td class="skill-bonus" title="Circumstance Bonus">{{circumstanceBonus}}</td>
            <td class="skill-bonus" title="Item Bonus">{{itemBonus}}</td>
            <td class="skill-penalty" title="Unrest Penalty">{{statusPenalty}}</td>
            <td class="skill-penalty" title="Circumstance Penalty">{{circumstancePenalty}}</td>
            <td class="skill-penalty" title="Ruin Penalty">{{itemPenalty}}</td>
            <td class="skill-penalty" title="Vacancy Penalty">{{vacancyPenalty}}</td>
            <td class="skill-value">{{value}}</td>
        </tr>
    {{/each}}
</table>
