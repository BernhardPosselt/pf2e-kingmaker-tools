{{#if settlements}}
    <table class="km-table">
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th title="Lots with at least 1 structure">Lots</th>
            <th title="Lots completely filled with structures">Level</th>
            <th>Water Borders</th>
            <th title="Not connected to capital via claimed hexes">Secondary</th>
            <th>Delete</th>
            <th>Open</th>
        </tr>
        {{#each settlements}}
            <tr>
                <td>{{name}}<input type="hidden" value="{{sceneId}}" name="settlements.{{@index}}.sceneId">{{#if overcrowded}} <i class="fa-solid fa-people-roof" title="Overcrowded"></i>{{/if}}{{#if lacksBridge}} <i class="fa-solid fa-bridge-circle-xmark" title="No Bridge"></i>{{/if}}</td>
                <td>
                    {{#select type}}
                        <select name="settlements.{{@index}}.type">
                            <option value="capital">Capital</option>
                            <option value="settlement">Settlement</option>
                        </select>
                    {{/select}}
                </td>
                <td title="Lots with at least 1 structure"><input type="number" style="width: 30px" name="settlements.{{@index}}.lots" value="{{lots}}"></td>
                <td title="Lots completely filled with structures"><input type="number" value="{{level}}" style="width: 30px" name="settlements.{{@index}}.level"></td>
                <td><input type="number" value="{{waterBorders}}" style="width: 30px" name="settlements.{{@index}}.waterBorders"></td>
                <td title="Not connected to capital via claimed hexes"><input type="checkbox" name="settlements.{{@index}}.secondaryTerritory" {{checked secondaryTerritory}}></td>
                <td>
                    <button type="button" class="icon-action km-delete-settlement" data-delete-index="{{@index}}"><i
                            class="fa-solid fa-trash"></i></button>
                </td>
                <td>
                    <button type="button" class="icon-action inspect-settlement" data-id="{{sceneId}}"><i
                            class="fa-solid fa-magnifying-glass"></i></button>
                </td>
            </tr>
        {{/each}}
    </table>
{{/if}}
<button type="button" id="make-current-scene-settlement" {{#unless canAddSettlement}}disabled{{/unless}}>Add Current Scene
    <i class="fa-solid fa-plus"></i></button>
