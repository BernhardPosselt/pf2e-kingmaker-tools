{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://posselt.at/pf2e-kingmaker-tools/schemas/event.json",
  "title": "Kingdom Event",
  "description": "A Kingdom Event",
  "$ref": "#/$defs/Event",
  "$defs": {
    "Event": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "description",
        "id",
        "traits"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "globalModifiers": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Modifier"
          }
        },
        "automationNotes": {
          "type": "string"
        },
        "special": {
          "type": "string"
        },
        "modifiers": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Modifier"
          }
        },
        "resolution": {
          "type": "string"
        },
        "resolvedOn": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/DegreeOfSuccess"
          }
        },
        "description": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "modifier": {
          "type": "number"
        },
        "traits": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/EventTraits"
          }
        },
        "location": {
          "type": "string"
        },
        "stages": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/EventStage"
          }
        }
      }
    },
    "EventStage": {
      "type": "object",
      "required": [
        "skills",
        "leader"
      ],
      "additionalProperties": false,
      "properties": {
        "skills": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/KingdomSkill"
          }
        },
        "leader": {
          "$ref": "#/$defs/Leader"
        },
        "criticalSuccess": {
          "$ref": "#/$defs/EventOutcome"
        },
        "success": {
          "$ref": "#/$defs/EventOutcome"
        },
        "failure": {
          "$ref": "#/$defs/EventOutcome"
        },
        "criticalFailure": {
          "$ref": "#/$defs/EventOutcome"
        }
      }
    },
    "EventOutcome": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "msg"
      ],
      "properties": {
        "msg": {
          "type": "string"
        },
        "modifiers": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Modifier"
          }
        }
      }
    },
    "Modifier": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "value",
        "name",
        "enabled",
        "buttonLabel"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "ability",
            "proficiency",
            "item",
            "status",
            "circumstance",
            "vacancy",
            "untyped",
            "leadership"
          ]
        },
        "notes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "note"
            ],
            "properties": {
              "note": {
                "type": "string"
              },
              "degree": {
                "$ref": "#/$defs/DegreeOfSuccess"
              }
            }
          }
        },
        "upgradeResults": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/UpgradeResult"
          }
        },
        "downgradeResults": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/DowngradeResult"
          }
        },
        "fortune": {
          "type": "boolean"
        },
        "rollTwiceKeepHighest": {
          "type": "boolean"
        },
        "rollTwiceKeepLowest": {
          "type": "boolean"
        },
        "buttonLabel": {
          "type": "string"
        },
        "value": {
          "type": "number"
        },
        "valueExpression": {
          "$ref": "#/$defs/When"
        },
        "name": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "turns": {
          "type": "number"
        },
        "isConsumedAfterRoll": {
          "type": "boolean"
        },
        "rollOptions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "applyIf": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Predicate"
          }
        }
      }
    },
    "DowngradeResult": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "downgrade"
      ],
      "properties": {
        "downgrade": {
          "$ref": "#/$defs/DegreeOfSuccess"
        },
        "times": {
          "type": "number"
        },
        "predicate": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Predicate"
          }
        }
      }
    },
    "UpgradeResult": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "upgrade"
      ],
      "properties": {
        "times": {
          "type": "number"
        },
        "upgrade": {
          "$ref": "#/$defs/DegreeOfSuccess"
        },
        "predicate": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Predicate"
          }
        }
      }
    },
    "Predicate": {
      "oneOf": [
        {
          "$ref": "#/$defs/GtePredicate"
        },
        {
          "$ref": "#/$defs/GtPredicate"
        },
        {
          "$ref": "#/$defs/LtePredicate"
        },
        {
          "$ref": "#/$defs/LtPredicate"
        },
        {
          "$ref": "#/$defs/EqPredicate"
        },
        {
          "$ref": "#/$defs/SomePredicate"
        },
        {
          "$ref": "#/$defs/AllPredicate"
        },
        {
          "$ref": "#/$defs/NotPredicate"
        },
        {
          "$ref": "#/$defs/HasRollOptionPredicate"
        },
        {
          "$ref": "#/$defs/InPredicate"
        }
      ]
    },
    "InPredicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "in"
      ],
      "properties": {
        "in": {
          "type": "array",
          "prefixItems": [
            {
              "$ref": "#/$defs/AnyScalar"
            },
            {
              "oneOf": [
                {
                  "type": "array",
                  "items": {
                    "$ref": "#/$defs/AnyScalar"
                  }
                },
                {
                  "type": "string"
                }
              ]
            }
          ],
          "items": false,
          "minItems": 2
        }
      }
    },
    "GtePredicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "gte"
      ],
      "properties": {
        "gte": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/AnyNumeric"
          },
          "minItems": 2,
          "maxItems": 2
        }
      }
    },
    "GtPredicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "gt"
      ],
      "properties": {
        "gt": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/AnyNumeric"
          },
          "minItems": 2,
          "maxItems": 2
        }
      }
    },
    "LtePredicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "lte"
      ],
      "properties": {
        "lte": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/AnyNumeric"
          },
          "minItems": 2,
          "maxItems": 2
        }
      }
    },
    "LtPredicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "lt"
      ],
      "properties": {
        "lt": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/AnyNumeric"
          },
          "minItems": 2,
          "maxItems": 2
        }
      }
    },
    "EqPredicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "eq"
      ],
      "properties": {
        "eq": {
          "type": "array",
          "prefixItems": [
            {
              "$ref": "#/$defs/AnyScalar"
            },
            {
              "$ref": "#/$defs/AnyScalar"
            }
          ],
          "items": false,
          "minItems": 2
        }
      }
    },
    "SomePredicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "some"
      ],
      "properties": {
        "some": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Predicate"
          },
          "minItems": 1
        }
      }
    },
    "AllPredicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "all"
      ],
      "properties": {
        "all": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Predicate"
          },
          "minItems": 1
        }
      }
    },
    "NotPredicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "not"
      ],
      "properties": {
        "not": {
          "$ref": "#/$defs/Predicate"
        }
      }
    },
    "HasRollOptionPredicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "hasRollOption"
      ],
      "properties": {
        "hasRollOption": {
          "type": "string"
        }
      }
    },
    "When": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "when"
      ],
      "properties": {
        "when": {
          "type": "object",
          "required": [
            "cases"
          ],
          "additionalProperties": false,
          "properties": {
            "cases": {
              "type": "array",
              "minItems": 1,
              "items": {
                "$ref": "#/$defs/Case"
              }
            },
            "default": {
              "$ref": "#/$defs/AnyScalar"
            }
          }
        }
      }
    },
    "Case": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "case"
      ],
      "properties": {
        "case": {
          "type": "array",
          "prefixItems": [
            {
              "$ref": "#/$defs/Predicate"
            },
            {
              "$ref": "#/$defs/AnyScalar"
            }
          ],
          "items": false,
          "minItems": 2
        }
      }
    },
    "AnyNumeric": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "number"
        }
      ]
    },
    "AnyScalar": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        },
        {
          "type": "number"
        },
        {
          "type": "boolean"
        }
      ]
    },
    "KingdomSkill": {
      "type": "string",
      "enum": [
        "agriculture",
        "arts",
        "boating",
        "defense",
        "engineering",
        "exploration",
        "folklore",
        "industry",
        "intrigue",
        "magic",
        "politics",
        "scholarship",
        "statecraft",
        "trade",
        "warfare",
        "wilderness"
      ]
    },
    "DegreeOfSuccess": {
      "type": "string",
      "enum": [
        "criticalSuccess",
        "success",
        "failure",
        "criticalFailure"
      ]
    },
    "Leader": {
      "type": "string",
      "enum": [
        "ruler",
        "counselor",
        "emissary",
        "general",
        "magister",
        "treasurer",
        "viceroy",
        "warden"
      ]
    },
    "EventTraits": {
      "type": "string",
      "enum": [
        "continuous",
        "dangerous",
        "settlement",
        "beneficial",
        "hex",
        "fortune",
        "downtime",
        "leadership"
      ]
    }
  }
}
