{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://posselt.at/pf2e-kingmaker-tools/schemas/feat.json",
  "title": "Kingdom Feat",
  "description": "A Kingdom Feat",
  "$ref": "#/$defs/Feat",
  "$defs": {
    "Feat": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "level",
        "text",
        "id"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "level": {
          "type": "number"
        },
        "increaseGainedLuxuriesOncePerTurnBy": {
          "type": "number"
        },
        "text": {
          "type": "string"
        },
        "ruinThresholdIncreases": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "amount",
              "increase"
            ],
            "properties": {
              "amount": {
                "type": "number"
              },
              "increase": {
                "type": "number"
              }
            }
          }
        },
        "removeLeaderVacancyPenalty": {
          "type": "boolean"
        },
        "isFreeAndFair": {
          "type": "boolean"
        },
        "increaseActivityUnrestReductionBy": {
          "type": "object",
          "required": [
            "minimumCurrentUnrest",
            "value"
          ],
          "properties": {
            "minimumCurrentUnrest": {
              "type": "number"
            },
            "value": {
              "type": "number"
            }
          }
        },
        "requirements": {
          "type": "object",
          "properties": {
            "skillRanks": {
              "type": "object",
              "properties": {
                "agriculture": {
                  "type": "number"
                },
                "arts": {
                  "type": "number"
                },
                "boating": {
                  "type": "number"
                },
                "defense": {
                  "type": "number"
                },
                "engineering": {
                  "type": "number"
                },
                "exploration": {
                  "type": "number"
                },
                "folklore": {
                  "type": "number"
                },
                "industry": {
                  "type": "number"
                },
                "intrigue": {
                  "type": "number"
                },
                "magic": {
                  "type": "number"
                },
                "politics": {
                  "type": "number"
                },
                "scholarship": {
                  "type": "number"
                },
                "statecraft": {
                  "type": "number"
                },
                "trade": {
                  "type": "number"
                },
                "warfare": {
                  "type": "number"
                },
                "wilderness": {
                  "type": "number"
                }
              }
            },
            "abilityScores": {
              "type": "object",
              "properties": {
                "stability": {
                  "type": "number"
                },
                "loyalty": {
                  "type": "number"
                },
                "economy": {
                  "type": "number"
                },
                "culture": {
                  "type": "number"
                }
              }
            },
            "featIds": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "increaseAnarchyLimit": {
          "type": "number"
        },
        "automationNotes": {
          "type": "string"
        },
        "modifiers": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Modifier"
          }
        },
        "resourceDice": {
          "type": "number"
        },
        "settlementMagicItemLevelIncrease": {
          "type": "number"
        },
        "trainSkill": {
          "$ref": "#/$defs/KingdomSkill"
        },
        "assuranceForSkill": {
          "$ref": "#/$defs/KingdomSkill"
        },
        "increaseUsableSkills": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "agriculture": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/KingdomSkill"
              }
            },
            "arts": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/KingdomSkill"
              }
            },
            "boating": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/KingdomSkill"
              }
            },
            "defense": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/KingdomSkill"
              }
            },
            "engineering": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/KingdomSkill"
              }
            },
            "exploration": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/KingdomSkill"
              }
            },
            "folklore": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/KingdomSkill"
              }
            },
            "industry": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/KingdomSkill"
              }
            },
            "intrigue": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/KingdomSkill"
              }
            },
            "magic": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/KingdomSkill"
              }
            },
            "politics": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/KingdomSkill"
              }
            },
            "scholarship": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/KingdomSkill"
              }
            },
            "statecraft": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/KingdomSkill"
              }
            },
            "trade": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/KingdomSkill"
              }
            },
            "warfare": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/KingdomSkill"
              }
            },
            "wilderness": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/KingdomSkill"
              }
            }
          }
        },
        "rollOptions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "Modifier": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "value",
        "name",
        "enabled",
        "buttonLabel"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "ability",
            "proficiency",
            "item",
            "status",
            "circumstance",
            "vacancy",
            "untyped",
            "leadership"
          ]
        },
        "notes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "note"
            ],
            "properties": {
              "note": {
                "type": "string"
              },
              "degree": {
                "$ref": "#/$defs/DegreeOfSuccess"
              }
            }
          }
        },
        "upgradeResults": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/UpgradeResult"
          }
        },
        "downgradeResults": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/DowngradeResult"
          }
        },
        "fortune": {
          "type": "boolean"
        },
        "rollTwiceKeepHighest": {
          "type": "boolean"
        },
        "rollTwiceKeepLowest": {
          "type": "boolean"
        },
        "buttonLabel": {
          "type": "string"
        },
        "selector": {
          "type": "string",
          "enum": ["check", "consumption", "ore", "lumber", "stone"]
        },
        "value": {
          "type": "number"
        },
        "valueExpression": {
          "$ref": "#/$defs/When"
        },
        "name": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "turns": {
          "type": "number"
        },
        "isConsumedAfterRoll": {
          "type": "boolean"
        },
        "rollOptions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "applyIf": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Predicate"
          }
        }
      }
    },
    "DowngradeResult": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "downgrade"
      ],
      "properties": {
        "downgrade": {
          "$ref": "#/$defs/DegreeOfSuccess"
        },
        "times": {
          "type": "number"
        },
        "predicate": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Predicate"
          }
        }
      }
    },
    "UpgradeResult": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "upgrade"
      ],
      "properties": {
        "times": {
          "type": "number"
        },
        "upgrade": {
          "$ref": "#/$defs/DegreeOfSuccess"
        },
        "predicate": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Predicate"
          }
        }
      }
    },
    "Predicate": {
      "oneOf": [
        {
          "$ref": "#/$defs/GtePredicate"
        },
        {
          "$ref": "#/$defs/GtPredicate"
        },
        {
          "$ref": "#/$defs/LtePredicate"
        },
        {
          "$ref": "#/$defs/LtPredicate"
        },
        {
          "$ref": "#/$defs/EqPredicate"
        },
        {
          "$ref": "#/$defs/SomePredicate"
        },
        {
          "$ref": "#/$defs/AllPredicate"
        },
        {
          "$ref": "#/$defs/NotPredicate"
        },
        {
          "$ref": "#/$defs/HasRollOptionPredicate"
        },
        {
          "$ref": "#/$defs/InPredicate"
        }
      ]
    },
    "InPredicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "in"
      ],
      "properties": {
        "in": {
          "type": "array",
          "prefixItems": [
            {
              "$ref": "#/$defs/AnyScalar"
            },
            {
              "oneOf": [
                {
                  "type": "array",
                  "items": {
                    "$ref": "#/$defs/AnyScalar"
                  }
                },
                {
                  "type": "string"
                }
              ]
            }
          ],
          "items": false,
          "minItems": 2
        }
      }
    },
    "GtePredicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "gte"
      ],
      "properties": {
        "gte": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/AnyNumeric"
          },
          "minItems": 2,
          "maxItems": 2
        }
      }
    },
    "GtPredicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "gt"
      ],
      "properties": {
        "gt": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/AnyNumeric"
          },
          "minItems": 2,
          "maxItems": 2
        }
      }
    },
    "LtePredicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "lte"
      ],
      "properties": {
        "lte": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/AnyNumeric"
          },
          "minItems": 2,
          "maxItems": 2
        }
      }
    },
    "LtPredicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "lt"
      ],
      "properties": {
        "lt": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/AnyNumeric"
          },
          "minItems": 2,
          "maxItems": 2
        }
      }
    },
    "EqPredicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "eq"
      ],
      "properties": {
        "eq": {
          "type": "array",
          "prefixItems": [
            {
              "$ref": "#/$defs/AnyScalar"
            },
            {
              "$ref": "#/$defs/AnyScalar"
            }
          ],
          "items": false,
          "minItems": 2
        }
      }
    },
    "SomePredicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "some"
      ],
      "properties": {
        "some": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Predicate"
          },
          "minItems": 1
        }
      }
    },
    "AllPredicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "all"
      ],
      "properties": {
        "all": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Predicate"
          },
          "minItems": 1
        }
      }
    },
    "NotPredicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "not"
      ],
      "properties": {
        "not": {
          "$ref": "#/$defs/Predicate"
        }
      }
    },
    "HasRollOptionPredicate": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "hasRollOption"
      ],
      "properties": {
        "hasRollOption": {
          "type": "string"
        }
      }
    },
    "When": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "when"
      ],
      "properties": {
        "when": {
          "type": "object",
          "required": [
            "cases"
          ],
          "additionalProperties": false,
          "properties": {
            "cases": {
              "type": "array",
              "minItems": 1,
              "items": {
                "$ref": "#/$defs/Case"
              }
            },
            "default": {
              "$ref": "#/$defs/AnyScalar"
            }
          }
        }
      }
    },
    "Case": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "case"
      ],
      "properties": {
        "case": {
          "type": "array",
          "prefixItems": [
            {
              "$ref": "#/$defs/Predicate"
            },
            {
              "$ref": "#/$defs/AnyScalar"
            }
          ],
          "items": false,
          "minItems": 2
        }
      }
    },
    "AnyNumeric": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "number"
        }
      ]
    },
    "AnyScalar": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        },
        {
          "type": "number"
        },
        {
          "type": "boolean"
        }
      ]
    },
    "KingdomSkill": {
      "type": "string",
      "enum": [
        "agriculture",
        "arts",
        "boating",
        "defense",
        "engineering",
        "exploration",
        "folklore",
        "industry",
        "intrigue",
        "magic",
        "politics",
        "scholarship",
        "statecraft",
        "trade",
        "warfare",
        "wilderness"
      ]
    },
    "DegreeOfSuccess": {
      "type": "string",
      "enum": [
        "criticalSuccess",
        "success",
        "failure",
        "criticalFailure"
      ]
    }
  }
}
