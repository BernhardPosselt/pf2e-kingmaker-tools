{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://posselt.at/pf2e-kingmaker-tools/schemas/kingdom-activity.json",
  "title": "Kingdom Activity",
  "description": "A Kingdom Activity",
  "$ref": "#/$defs/Activity",
  "$defs": {
    "ActivityResult": {
      "type": "object",
      "required": [
        "msg"
      ],
      "properties": {
        "msg": {
          "type": "string"
        },
        "modifiers": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/ChatModifier"
          }
        }
      }
    },
    "Activity": {
      "type": "object",
      "required": [
        "title",
        "description",
        "id",
        "dc",
        "skills",
        "phase",
        "enabled",
        "fortune",
        "oncePerRound"
      ],
      "properties": {
        "skills": {
          "$ref": "#/$defs/Skills"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "requirement": {
          "type": "string"
        },
        "special": {
          "type": "string"
        },
        "dc": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "string",
              "enum": [
                "control",
                "custom",
                "none",
                "scouting"
              ]
            }
          ]
        },
        "phase": {
          "type": "string",
          "enum": [
            "army",
            "civic",
            "commerce",
            "event",
            "leadership",
            "region",
            "upkeep"
          ]
        },
        "dcAdjustment": {
          "type": "number"
        },
        "enabled": {
          "type": "boolean"
        },
        "fortune": {
          "type": "boolean"
        },
        "oncePerRound": {
          "type": "boolean"
        },
        "id": {
          "type": "string"
        },
        "hint": {
          "type": "object"
        },
        "criticalSuccess": {
          "$ref": "#/$defs/ActivityResult"
        },
        "success": {
          "$ref": "#/$defs/ActivityResult"
        },
        "failure": {
          "$ref": "#/$defs/ActivityResult"
        },
        "criticalFailure": {
          "$ref": "#/$defs/ActivityResult"
        }
      }
    },
    "Modifier": {
      "type": "object",
      "required": [
        "type",
        "value",
        "name",
        "enabled"
      ],
      "properties": {
        "$type": {
          "type": "string",
          "enum": [
            "ability",
            "proficiency",
            "item",
            "status",
            "circumstance",
            "vacancy",
            "untyped",
            "leadership"
          ]
        },
        "value": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "phases": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "army",
              "civic",
              "commerce",
              "event",
              "leadership",
              "region",
              "upkeep"
            ]
          }
        },
        "activities": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "abilities": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "skills": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/KingdomSkill"
          }
        },
        "turns": {
          "type": "number"
        },
        "consumeId": {
          "type": "string"
        },
        "rollOptions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "predicate": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Predicate"
          }
        }
      }
    },
    "ChatModifier": {
      "allOf": [
        {
          "$ref": "#/$defs/Modifier"
        }
      ],
      "properties": {
        "renderPredicate": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Predicate"
          }
        }
      }
    },
    "Predicate": {
      "oneOf": [
        {
          "$ref": "#/$defs/GtePredicate"
        },
        {
          "$ref": "#/$defs/GtPredicate"
        },
        {
          "$ref": "#/$defs/LtePredicate"
        },
        {
          "$ref": "#/$defs/LtPredicate"
        },
        {
          "$ref": "#/$defs/EqPredicate"
        },
        {
          "$ref": "#/$defs/OrPredicate"
        },
        {
          "$ref": "#/$defs/AndPredicate"
        },
        {
          "$ref": "#/$defs/NotPredicate"
        },
        {
          "$ref": "#/$defs/HasFlagPredicate"
        },
        {
          "$ref": "#/$defs/HasRollOptionPredicate"
        }
      ]
    },
    "GtePredicate": {
      "type": "object",
      "required": [
        "gte"
      ],
      "properties": {
        "gte": {
          "type": "array",
          "prefixItems": [
            {
              "type": "string"
            },
            {
              "type": "string"
            }
          ],
          "items": false,
          "minItems": 2
        }
      }
    },
    "GtPredicate": {
      "type": "object",
      "required": [
        "gt"
      ],
      "properties": {
        "gt": {
          "type": "array",
          "prefixItems": [
            {
              "type": "string"
            },
            {
              "type": "string"
            }
          ],
          "items": false,
          "minItems": 2
        }
      }
    },
    "LtePredicate": {
      "type": "object",
      "required": [
        "lte"
      ],
      "properties": {
        "lte": {
          "type": "array",
          "prefixItems": [
            {
              "type": "string"
            },
            {
              "type": "string"
            }
          ],
          "items": false,
          "minItems": 2
        }
      }
    },
    "LtPredicate": {
      "type": "object",
      "required": [
        "lt"
      ],
      "properties": {
        "lt": {
          "type": "array",
          "prefixItems": [
            {
              "type": "string"
            },
            {
              "type": "string"
            }
          ],
          "items": false,
          "minItems": 2
        }
      }
    },
    "EqPredicate": {
      "type": "object",
      "required": [
        "eq"
      ],
      "properties": {
        "eq": {
          "type": "array",
          "prefixItems": [
            {
              "type": "string"
            },
            {
              "type": "string"
            }
          ],
          "items": false,
          "minItems": 2
        }
      }
    },
    "OrPredicate": {
      "type": "object",
      "required": [
        "or"
      ],
      "properties": {
        "or": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Predicate"
          }
        }
      }
    },
    "AndPredicate": {
      "type": "object",
      "required": [
        "and"
      ],
      "properties": {
        "and": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Predicate"
          }
        }
      }
    },
    "NotPredicate": {
      "type": "object",
      "required": [
        "not"
      ],
      "properties": {
        "not": {
          "$ref": "#/$defs/Predicate"
        }
      }
    },
    "HasFlagPredicate": {
      "type": "object",
      "required": [
        "hasFlag"
      ],
      "properties": {
        "hasFlag": {
          "type": "string"
        }
      }
    },
    "HasRollOptionPredicate": {
      "type": "object",
      "required": [
        "hasRollOption"
      ],
      "properties": {
        "hasRollOption": {
          "type": "string"
        }
      }
    },
    "KingdomSkill": {
      "type": "string",
      "enum": [
        "agriculture",
        "arts",
        "boating",
        "defense",
        "engineering",
        "exploration",
        "folklore",
        "industry",
        "intrigue",
        "magic",
        "politics",
        "scholarship",
        "statecraft",
        "trade",
        "warfare",
        "wilderness"
      ]
    },
    "Skills": {
      "type": "object",
      "properties": {
        "agriculture": {
          "type": "number"
        },
        "arts": {
          "type": "number"
        },
        "boating": {
          "type": "number"
        },
        "defense": {
          "type": "number"
        },
        "engineering": {
          "type": "number"
        },
        "exploration": {
          "type": "number"
        },
        "folklore": {
          "type": "number"
        },
        "industry": {
          "type": "number"
        },
        "intrigue": {
          "type": "number"
        },
        "magic": {
          "type": "number"
        },
        "politics": {
          "type": "number"
        },
        "scholarship": {
          "type": "number"
        },
        "statecraft": {
          "type": "number"
        },
        "trade": {
          "type": "number"
        },
        "warfare": {
          "type": "number"
        },
        "wilderness": {
          "type": "number"
        }
      }
    }
  }
}
