{{#if hideEmpty}}
    <div class="km-food-cost">
        {{#if rations}}
            <span
                    class="{{#if missingRations}}km-missing-ingredients{{/if}}"
                    title="{{title}}: {{rations}}{{#if showTotal}}/{{totalRations}}{{/if}}"
            >{{rationsLabel}}
                <img src="{{rationImage}}" alt="rations">
        </span>
        {{/if}}
        {{#if basicIngredients}}
            <span
                    class="{{#if missingBasic}}km-missing-ingredients{{/if}}"
                    title="{{title}}: {{basicIngredients}}{{#if showTotal}}/{{totalBasicIngredients}}{{/if}}"
            >{{basicIngredientsLabel}}
                <img src="{{basicImage}}" alt="basic ingredients">
        </span>
        {{/if}}
        {{#if specialIngredients}}
            <span
                    class="{{#if missingSpecial}}km-missing-ingredients{{/if}}"
                    title="{{title}}: {{specialIngredients}}{{#if showTotal}}/{{totalSpecialIngredients}}{{/if}}"
            >{{specialIngredientsLabel}}
                <img src="{{specialImage}}" alt="special ingredients">
        </span>
        {{/if}}
    </div>
{{else}}
    <div class="km-food-cost">
            <span
                    class="{{#if missingRations}}km-missing-ingredients{{/if}}"
                    title="{{title}}: {{rations}}{{#if showTotal}}/{{totalRations}}{{/if}}"
            >{{rationsLabel}}
                <img src="{{rationImage}}" alt="rations">
        </span>
        <span
                class="{{#if missingBasic}}km-missing-ingredients{{/if}}"
                title="{{title}}: {{basicIngredients}}{{#if showTotal}}/{{totalBasicIngredients}}{{/if}}"
        >{{basicIngredientsLabel}}
            <img src="{{basicImage}}" alt="basic ingredients">
        </span>
        <span
                class="{{#if missingSpecial}}km-missing-ingredients{{/if}}"
                title="{{title}}: {{specialIngredients}}{{#if showTotal}}/{{totalSpecialIngredients}}{{/if}}"
        >{{specialIngredientsLabel}}
            <img src="{{specialImage}}" alt="special ingredients">
        </span>
    </div>
{{/if}}