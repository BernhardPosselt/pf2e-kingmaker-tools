<div class="km-skill-picker-input">
    {{#if skills}}
        <ul>
            {{#each skills}}
                <li>{{label}}{{#unless ../hideProficiency}} ({{proficiency}}){{/unless}}</li>
            {{/each}}
        </ul>
    {{else}}
        <p>{{localizeKM "applications.skillPicker.noCheck"}}</p>
    {{/if}}
    <button type="button" class="full-width" data-action="edit-skills">{{localizeKM "applications.edit"}}</button>
</div>