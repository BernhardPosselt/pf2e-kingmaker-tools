<div>
    <ul>
        <li><b>{{localizeKM "applications.skillPicker.validateOnly"}}</b>: {{localizeKM "applications.skillPicker.validateOnlyHelp"}}</li>
        <li><b>{{localizeKM "applications.skillPicker.required"}}</b>: {{localizeKM "applications.skillPicker.requiredHelp"}}</li>
    </ul>
    <div class="row km-skill-picker-row">
        {{#each anySkill.cells}}
            {{> formElement this }}
        {{/each}}
        <div class="km-any-skill-spacer"></div>
    </div>
    <hr {{#if anyEnabled}}hidden{{/if}}>
    {{#each skills}}
        <div class="row km-skill-picker-row" {{#if ../anyEnabled}}hidden{{/if}}>
            {{#each cells}}
                {{> formElement this }}
            {{/each}}
            {{#if isLore}}
                <button type="button"
                        data-action="delete-lore"
                        data-delete-index="{{index}}">
                    <i class="fa-solid fa-trash"></i>
                </button>{{else}}
                <div class="km-delete-placeholder"></div>{{/if}}
        </div>
    {{/each}}
    {{#if allowLores}}
        <button class="full-width"
                type="button"
                data-action="add-lore"
                {{#if anyEnabled}}hidden{{/if}}>{{localizeKM "applications.skillPicker.addLore"}}
        </button>
    {{/if}}
    {{#if atLeastOneSkillError}}
        <p class="km-picker-error">{{localizeKM "applications.skillPicker.pickOneSkill"}}</p>
    {{/if}}
    <button type="submit" data-action="km-save" {{#unless isFormValid}}disabled{{/unless}}>{{localizeKM "applications.save"}}</button>
</div>