<div class="km-chat-buttons">
    {{#if criticalSuccess}}<button type="button" data-kingdom-actor-uuid="{{actorUuid}}" class="km-gain-fame-button">Gain 1 Fame</button>{{/if}}
    {{#if eventIndex}}<button type="button" data-kingdom-actor-uuid="{{actorUuid}}" data-event-index="{{eventIndex}}" class="km-resolve-event">Resolve Event</button>{{/if}}
    {{#each modifiers}}
        <button class="km-apply-modifier-effect"
                data-kingdom-actor-uuid="{{actorUuid}}"
                data-data="{{data}}">Apply Effect: {{label}}</button>
    {{/each}}
</div>
