<h3>{{label}}</h3>
<ul class="km-chat-event-traits">
    {{#each traits}}
        <li>{{this}}</li>
    {{/each}}
</ul>
{{#if location}}<p><b>Location:</b> {{location}}</p>{{/if}}
{{{description}}}
{{#each stages}}
    {{#unless @first}}
        <hr>{{/unless}}
    <p><b>Leader</b>: {{leader}}</p>
    <p><b>Skills</b>: {{#each skills}}{{#unless @first}}, {{/unless}}{{this}}{{/each}}</p>
    <ul class="km-event-degrees">
        {{#if criticalSuccess}}
            <li><b>Critical Success:</b> {{{criticalSuccess}}}</li>{{/if}}
        {{#if success}}
            <li><b>Success:</b> {{{success}}}</li>{{/if}}
        {{#if failure}}
            <li><b>Failure:</b> {{{failure}}}</li>{{/if}}
        {{#if criticalFailure}}
            <li><b>Critical Failure:</b> {{{criticalFailure}}}</li>{{/if}}
    </ul>
{{/each}}
{{#if resolution}}
    <hr>
    <p><b>Resolution:</b> {{resolution}}</p>
{{/if}}
{{#if special}}
    <hr>
    <p><b>Special:</b> {{special}}</p>{{/if}}
<hr>
<button type="button"
        class="km-add-ongoing-event"
        data-kingdom-actor-uuid="{{actorUuid}}"
        data-event-id="{{eventId}}"
>Add to Active Events
</button>