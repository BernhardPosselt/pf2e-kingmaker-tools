<div {{#if (ne currentNavEntry 'tradeAgreements')}}hidden{{/if}} class="km-kingdom-sheet-content">
    <div class="km-kingdom-sheet-sub-content km-kingdom-sheet-trade-agreements">
        <section>
            <h2>Groups  <span class="km-header-right-align"><button type="button" data-action="add-group"><i class="fa-solid fa-plus"></i></button></span></h2>
            <table>
                <thead>
                <tr>
                    <td>Name</td>
                    <td>Negotiation DC</td>
                    <td>At War</td>
                    <td>Relations</td>
                    <td>Delete</td>
                </tr>
                </thead>
                <tbody>
                {{#each groups}}
                    <tr>
                        <td>{{> formElement name}}</td>
                        <td>{{> formElement negotiationDC}}</td>
                        <td>{{> formElement atWar}}</td>
                        <td>{{> formElement relations}}</td>
                        <td><button type="button" data-action="delete-group" data-index="{{@index}}">
                            <i class="fa-solid fa-trash"></i>
                        </button></td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </section>
    </div>
</div>